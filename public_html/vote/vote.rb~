#!/usr/bin/env ruby
# encoding: utf-8
require 'cgi'
cgi = CGI.new

ary = cgi.params["selects"]

ary = ary.join("\n")

data = open("vote_result.txt", "a:UTF-8")
data.write(ary + "\n")
data.close

print cgi.header("text/html; charset = utf-8")
print <<EOF                                                                     
<html>
Result<br>
#{ary}
<br>
投稿ありがとうございました。
<a href="http://edu.mast.tsukuba.ac.jp:8080/~s1411451/wp/vote/enquete_form.rb">追加で投票をする</a>
<a href="http://edu.mast.tsukuba.ac.jp:8080/~s1411451/wp/vote/view_result.rb">投票結果を見る</a>
</html>                                                                  
EOF
